<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aclass.shishir.handler_looper_example.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Thread"
        android:gravity="center_horizontal"
        android:id="@+id/StartSimpleThread"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Thread2"
        android:gravity="center_horizontal"
        android:id="@+id/StartSimpleThread1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Thread3"
        android:gravity="center_horizontal"
        android:id="@+id/StartSimpleThread2"/>

   <SeekBar
       android:layout_marginTop="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/seekBarUpdate"/>

</LinearLayout>
